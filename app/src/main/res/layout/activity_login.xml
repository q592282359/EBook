<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/dl_bj" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="100dp">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <com.xw.repo.XEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="58dp"
                android:background="@null"
                android:drawableLeft="@mipmap/dl_yhm"
                android:drawablePadding="10dp"
                android:hint="请输入您的用户名"

                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#b9b9b9"
                android:textSize="15dp"
                app:x_clearDrawable="@mipmap/login_delete_icon"
                app:x_disableEmoji="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#cccccc" />

            <com.xw.repo.XEditText
                android:id="@+id/et_passWord"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="38dp"
                android:background="@null"
                android:drawableLeft="@mipmap/dl_mm_icon"
                android:drawablePadding="10dp"
                android:hint="请输入您的密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#b9b9b9"
                android:textSize="15dp"
                app:x_clearDrawable="@mipmap/login_delete_icon"
                app:x_hidePwdDrawable="@mipmap/dl_bkj_icon"
                app:x_showPwdDrawable="@mipmap/dl_kj_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="立即注册"
                    android:textColor="#54b8ff"
                    android:layout_marginLeft="20dp"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="182dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.8"
                    android:background="@mipmap/dl_buttom"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/btn_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:text="忘记密码？"
                    android:textColor="#54b8ff"
                    android:textSize="13dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="借书也可以这样简单！"
        android:textColor="#b9b9b9"
        android:textSize="13dp" />


</RelativeLayout>
